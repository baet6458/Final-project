<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text="Washer:"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"

        />

    <TextView
        android:layout_toRightOf="@id/machine"
        android:id="@+id/machineNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text="2"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"

        />
    <Button
        android:id="@+id/emailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/clearButton"
        android:background="@color/Argent"
        android:text="Email user"
        android:textSize="30dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:layout_marginRight="5dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/clearButton"
        android:layout_toRightOf="@id/emailButton"
        android:background="@color/Argent"
        android:text="Text user"
        android:textSize="30dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"

        />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Clear machine"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:background="@color/Argent"
        android:layout_marginTop="10dp"/>

</RelativeLayout>